
<h1>Follow Requests</h1>

<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Sender</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @follow_requests.each do |follow_request| %>
      <tr>
        <td><%= follow_request.recipient.username %></td>
        <td><%= follow_request.sender.username %></td>
        <td><%= follow_request.status %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Follow Request', new_follow_request_path %>
